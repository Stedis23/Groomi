<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginHorizontal="@dimen/indent_20"
	android:layout_marginTop="@dimen/indent_20"
	android:gravity="center"
	android:orientation="vertical"
	android:weightSum="5">

	<ImageView
		android:id="@+id/image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/indent_20"
		android:layout_weight="5"
		android:adjustViewBounds="true"
		android:scaleType="centerInside"
		tools:srcCompat="@drawable/ic_we_groomi" />

	<TextView
		android:id="@+id/title"
		style="@style/Header2Neutral800"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/spacing_4"
		android:layout_weight="1"
		android:gravity="center"
		android:text="@string/welcome_page_greetings_title" />

	<TextView
		android:id="@+id/description"
		style="@style/Body1Neutral600"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:text="@string/welcome_page_greetings_description" />
</LinearLayout>